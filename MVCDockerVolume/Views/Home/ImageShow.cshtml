@model IEnumerable<string>
@{
    ViewData["Title"] = "ImageShow";
}

<h1>Resimler</h1>

@foreach (var name in Model)
{
<img src="~/images/@name" style="width:100px; height:100px;border:1px solid red;" />

<h3>@name</h3>
}


<form asp-action="ImageShow" method="post">
    <input type="text" name="name" value="" />
